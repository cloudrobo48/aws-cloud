#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸš§ Running pre-commit hook: formatting check..."
npm run format
format_status=$?

echo "ğŸš§ Running pre-commit hook: linting..."
npm run lint
lint_status=$?

if [ $format_status -ne 0 ]; then
  echo "âŒ Format check failed. Please run 'npm run format:write' to fix formatting issues."
  exit 1
fi

if [ $lint_status -ne 0 ]; then
  echo "âŒ Lint failed. Commit aborted by pre-commit hook."
  exit 1
fi

echo "âœ… Format & Lint passed! Proceeding with commit."
